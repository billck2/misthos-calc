    body { margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial; background:var(--bg); color:#0f172a; }
    header { padding: 20px; background: linear-gradient(90deg,#e6eefc,#f7f7fb); border-bottom:1px solid #e5e7eb; }
    h1 { margin:0; color:var(--pri); font-size: 20px; }
    main { padding: 16px; max-width: 1100px; margin: 0 auto; }
    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 16px; }
    .card { background:var(--card); border:1px solid #e5e7eb; border-radius: 14px; padding: 16px; box-shadow:0 1px 2px rgba(0,0,0,0.04); }
    .card h2 { margin-top:0; font-size: 16px; }
    label { display:block; font-weight:600; margin-top:10px; }
    input[type="number"], select { width: 100%; padding: 10px 12px; border:1px solid #d1d5db; border-radius: 10px; font-size: 14px; background:#f8fafc; }
    .help { color: var(--mut); font-size: 12px; margin-top: 4px; }
    .row { display:grid; grid-template-columns: 1fr 1fr; gap: 10px; }
    .result { display:flex; justify-content: space-between; padding: 8px 0; border-bottom: 1px dashed #e5e7eb; }
    .result .val { font-variant-numeric: tabular-nums; }
